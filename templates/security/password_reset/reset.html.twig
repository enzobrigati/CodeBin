{% extends 'base.html.twig' %}

{% block title %}Réinitialiser mon mot de passe{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            {% for message in app.flashes('password_reset_request_error') %}
                <div class="col-12">
                    <div class="alert alert-info">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card bg-lightblue">
                    <div class="card-header">Réinitialiser mon mot de passe</div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'row'}}) }}
                        <div class="col-12">
                            {{ form_row(form._newpassword) }}
                        </div>
                        <div class="col-12">
                            <button class="btn btn-success" type="submit"><i
                                        class="fa fa-check-circle"></i> Valider
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}