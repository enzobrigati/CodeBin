{% extends 'base.html.twig' %}

{% block title %}Voir le signalement{% endblock %}

{% block body %}
        <div class="container mt-4">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-lightblue">
                        <div class="card-header">
                            Signalement effectué par <b>{{ report.owner.pseudo }}</b> <span class="badge bg-info">{{ report.createdAt|date('d-m-Y à H:i')}}</span>
                        </div>
                        <div class="card-body">
                            <p><i class="fa fa-clipboard"></i> Paste : <a href="{{ path('paste.show', {id: report.paste.id}) }}" target="_blank">{{ report.paste.title ? report.paste.title : 'untitled' }}</a></p>
                            <p><b>Raison du signalement :</b> {{ report.reason|nl2br }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('moderation.paste.delete', {id: report.paste.id}) }}" class="btn btn-danger" onclick="return(confirm('Êtes-vous sur de vouloir supprimer le paste ?'))"><i class="fa fa-trash"></i> Supprimer le paste</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}

